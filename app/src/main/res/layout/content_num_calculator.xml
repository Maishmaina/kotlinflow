<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <EditText
        android:layout_weight="1"
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:paddingTop="15pt"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:gravity="right"
        android:inputType="textPersonName"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button90"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:background="@color/whiteback"
                android:text="A/C" />

            <Button
                android:id="@+id/button6Q"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:background="@color/whiteback"
                android:text="+/-" />

            <Button
                android:id="@+id/button51"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:background="@color/whiteback"
                android:text="%" />

            <Button
                android:id="@+id/button41"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@color/yellow"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:background="@color/whiteback"
                android:text="7" />

            <Button
                android:id="@+id/button16"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:background="@color/whiteback"
                android:text="8" />

            <Button
                android:id="@+id/button512"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:background="@color/whiteback"
                android:text="9" />

            <Button
                android:id="@+id/button4X"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@color/yellow"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:background="@color/whiteback"
                android:text="4" />

            <Button
                android:id="@+id/button65"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:background="@color/whiteback"
                android:text="5" />

            <Button
                android:id="@+id/button53"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:background="@color/whiteback"
                android:text="6" />

            <Button
                android:id="@+id/button4M"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@color/yellow"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:background="@color/whiteback"
                android:text="1" />

            <Button
                android:id="@+id/button6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:background="@color/whiteback"
                android:text="2" />

            <Button
                android:id="@+id/button5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:background="@color/whiteback"
                android:text="3" />

            <Button
                android:id="@+id/button4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@color/yellow"
                android:text="+" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="60pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:textSize="18sp"
            android:background="@color/whiteback"
            android:text="0" />

        <Button
            android:id="@+id/button2"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:textSize="18sp"
            android:background="@color/whiteback"
            android:text="." />

        <Button
            android:id="@+id/button"
            android:layout_width="22pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:textSize="18sp"
            android:onClick="butNumberEvent"
            android:textColor="@color/white"
            android:background="@color/yellow"
            android:text="=" />
    </LinearLayout>
</LinearLayout>